@using BookStore.Models;
@model List<ChuDe>
@{
    ViewBag.Title = "DanhMucChuDe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh Mục Chủ Đề</h2>

@foreach (var item in Model)
{
    <a href="@Url.Action("SachTheoChuDe","ChuDe", new { @Ma=item.MaChuDe})" class="button button-delete">@item.TenChuDe</a>
}
