@using BookStore.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<BookStore.Models.ChuDe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin.cshtml";
}
<h2>Index</h2>
<p>
    @Html.ActionLink("Thêm Mới", "ThemMoi")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().MaChuDe)
        </th>          
        <th>
            @Html.DisplayNameFor(model => model.First().TenChuDe)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaChuDe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenChuDe)
            </td>           
            <td>
                @Html.ActionLink("Chỉnh Sửa", "ChinhSua", new { @MaSach = item.MaChuDe}) |;
                @Html.ActionLink("Chi tiết", "HienThi", new { @MaSach = item.MaChuDe }) |
                @Html.ActionLink("Xóa", "Xoa", new { @MaSach = item.MaChuDe })
            </td>
        </tr>
    }

</table>

@*Tạo page trang*@
Trang @(Model.PageCount<Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount;
@Html.PagedListPager(Model, page => Url.Action("index", "Admin", new { page = page })).



