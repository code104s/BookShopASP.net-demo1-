@using BookStore.Models;
@model List<Sach>

@{
    ViewBag.Title = "SachTheoChuDe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color:red;font-weight:bold">Sách Theo Chủ Đề</h2>
@if (Model.Count == 0)
{
    <h1>@ViewBag.Sach</h1>
}

@{ int i = 0;}
@foreach (var item in Model)
{
    i++;
<div class="sanpham" style="float: left; text-align: center; margin: 30px 30px 40px 50px">
    <a href="@Url.Action("XemChiTiet","Sach",new { @Ma=item.MaSach})"><img src="~/HinhAnhSP/@item.AnhBia" alt="Image" style="width:125px;height:150px;" /></a><br />
    @if (item.TenSach.Length > 10)
    {
        <div class="tenSach" style="float: left; color: #000; font-weight: bold; font-size: 10px; text-align: center "> @item.TenSach</div><br />
    }
    else
    {
        <div class="tenSach" style="float:left;color:#000;font-weight:bold;font-size:5px"> @item.TenSach.Substring(0, 10) ... </div><br />
    }
    <div class="gia" style="float:left;color:red;font-size:15px;font-weight:bold"><strong> Giá : </strong>@string.Format("{0:0,0}", item.GiaBan) <strong>vnd</strong></div><br />
    @using (Html.BeginForm("ThemGioHang", "GioHang", new { @Ma = item.MaSach, @strURL = Request.Url.ToString() }))
    {
        <button type="submit" class="button button-delete" style="margin-top:1%"> Mua Hàng <i class="fa fa-shopping-cart" aria-hidden="true"></i></button>
    }
</div>
    if (i % 4 == 0)
    {
        <hr />
    }
}
<div style="clear:both"></div>
